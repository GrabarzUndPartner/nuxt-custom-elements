{
  "name": "nuxt-custom-elements",
  "version": "2.0.0-beta.31",
  "description": "Publish your Components as a vue-custom-element standalone build.",
  "keywords": [
    "nuxtjs",
    "vuejs",
    "vue-custom-element",
    "custom-element",
    "shadow-dom"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/GrabarzUndPartner/nuxt-custom-elements"
  },
  "license": "MIT",
  "author": "Thorn-Welf Walli",
  "contributors": [
    {
      "name": "Thorn-Welf Walli",
      "email": "lammpee@gmail.de"
    }
  ],
  "exports": {
    ".": {
      "import": "./dist/module.mjs",
      "require": "./dist/module.cjs"
    }
  },
  "main": "./dist/module.cjs",
  "type": "module",
  "types": "./dist/types.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "prepack": "nuxt-module-build build",
    "prepare": "husky",
    "build": "nuxt build playground",
    "dev": "nuxt dev playground",
    "generate": "nuxt generate playground",
    "preview": "nuxt preview",
    "lint": "nuxt prepare playground && npm run lint:css && npm run lint:es",
    "lint:es": "eslint --fix .",
    "lint:css": "stylelint \"playground/**/*.vue\" \"playground/**/*.css\", \"lib/**/*.vue\" \"lib/**/*.css\"",
    "lint:report": "nuxt prepare playground && eslint -f json-relative -o ./eslint-report.json .",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "start:static": "node ./tools/static-server.js --dist playground/.nuxt/nuxt-custom-elements/dist",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:preview": "vitepress preview docs"
  },
  "dependencies": {
    "@unplugin-vue-ce/sub-style": "1.0.0",
    "change-case": "5.4.4",
    "clone": "2.1.2",
    "defu": "6.1.4",
    "html-webpack-plugin": "5.6.3",
    "lodash-es": "4.17.21",
    "vue-web-component-wrapper": "1.6.7",
    "webpack-bundle-analyzer": "4.10.2"
  },
  "devDependencies": {
    "@commitlint/cli": "19.5.0",
    "@commitlint/config-conventional": "19.5.0",
    "@nuxt/eslint": "0.6.0",
    "@nuxt/module-builder": "0.8.4",
    "@nuxt/webpack-builder": "3.13.2",
    "@types/node": "20.17.0",
    "commitlint": "19.5.0",
    "eslint": "9.13.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-formatter-json-relative": "0.1.0",
    "eslint-plugin-prettier": "5.2.1",
    "eslint-plugin-security": "3.0.1",
    "finalhandler": "1.3.1",
    "get-port-please": "3.1.2",
    "husky": "9.1.6",
    "lint-staged": "15.2.10",
    "markdown-it-inline-comments": "1.0.1",
    "nuxt": "3.13.2",
    "playwright": "1.48.1",
    "postcss-html": "1.7.0",
    "postcss-preset-env": "10.0.8",
    "prettier": "3.3.3",
    "read-pkg": "9.0.1",
    "serve-static": "1.16.2",
    "stylelint": "16.10.0",
    "stylelint-config-recess-order": "5.1.1",
    "stylelint-config-standard": "36.0.1",
    "vitepress": "1.4.1",
    "vitest": "2.1.3"
  }
}
